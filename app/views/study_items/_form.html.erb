<%= form_with(model: study_item) do |f|%>
    <div>
        <%= f.label :title, 'Título' %>
        <%= f.text_field :title  %>
    </div>
    <div>
        <%= f.label :category, 'Categoria' %>
        <%= f.text_field :category %>
    </div>
    <div>
        <span>Feito? </span>
        <%= f.label :done, 'Sim' %>
        <%= f.radio_button :done, 'true' %>
        <%= f.label :done, 'Não' %>
        <%= f.radio_button  :done, 'false' %>
    </div>
    
    <%= f.submit 'Editar' %>
    
<% end %>